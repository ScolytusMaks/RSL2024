class "Форма ответственности";

inclass
  func ПоНомеру(НомерПоля:integer; НомерФормы:integer; Назначение:integer):string;
  --НомерПоля - согласно спецификации РКП
  --Номер формы - позиция списка (n-1)
  --Назначение: 0 - статья ЛГС, 1 - указатель ЛГС
    if     НомерПоля = 000      then    --Все
      if          НомерФормы =  0                       then  Result = "";
      end;
    elsif  НомерПоля = 600      then    --Персоналии
      if          НомерФормы =  0                       then  Result = "";
      end;
    elsif  НомерПоля = 700      then    --Авторы, не указанные в заголовке
      if          НомерФормы =  0                       then  Result = "";
      end;
    elsif  НомерПоля = 701      then    --Участники бесед
      if          НомерФормы =  0                       then  Result = "";
      end;
    elsif  НомерПоля = 702      then    --Редакторы
    if          Назначение = 0                          then
      if          НомерФормы =  0                       then  Result = "ред.";
      elsif       НомерФормы =  1                       then  Result = "подгот. к печати";
      elsif       НомерФормы =  2                       then  Result = "текст подгот.";
      elsif       НомерФормы =  3                       then  Result = "подгот.";
      elsif       НомерФормы =  4                       then  Result = "публ.";
      --elsif       НомерФормы =  5                       then  Result = "составитель";
      end;
    else
      if          НомерФормы =  0                       then  Result = "ред.";
      elsif       НомерФормы =  1                       then  Result = "";
      elsif       НомерФормы =  2                       then  Result = "";
      elsif       НомерФормы =  3                       then  Result = "";
      elsif       НомерФормы =  4                       then  Result = "";
      --elsif       НомерФормы =  5                       then  Result = "составитель";
      end;
    end;
    elsif  НомерПоля = 703      then    --Переводчики
      if          НомерФормы =  0                       then  Result = "пер.";
      end;
    elsif  НомерПоля = 704      then    --Авторы вступительных статей
    if          Назначение = 0                          then
      if          НомерФормы =  0                       then  Result = "авт. вступ. ст.";
      end;
    else
      if          НомерФормы =  0                       then  Result = "вступ. ст.";
      end;
    end;
    elsif  НомерПоля = 705      then    --Авторы литературной обработки
    if          Назначение = 0                          then
      if          НомерФормы =  0                       then  Result = "авт. лит. обраб.";
      elsif       НомерФормы =  1                       then  Result = "записал";
      elsif       НомерФормы =  2                       then  Result = "записала";
      elsif       НомерФормы =  3                       then  Result = "записали";
      elsif       НомерФормы =  4                       then  Result = "запись";
      end;
    else
      if          НомерФормы =  0                       then  Result = "лит. обраб.";
      elsif       НомерФормы =  1                       then  Result = "";
      elsif       НомерФормы =  2                       then  Result = "";
      elsif       НомерФормы =  3                       then  Result = "";
      end;
    end;
    elsif  НомерПоля = 706      then    --Иллюстраторы
      if          НомерФормы =  0                       then  Result = "ил.";
      end;
    elsif  НомерПоля = 707      then    --Авторы инсценировок
    if          Назначение = 0                          then
      if          НомерФормы =  0                       then  Result = "авт. инсценировок";
      end;
    else
      if          НомерФормы =  0                       then  Result = "инсценировка";
      end;
    end;
    elsif  НомерПоля = 709      then    --Прочие авторы
    if          Назначение = 0                          then
      if          НомерФормы =  0                       then  Result = "Автор:";
      elsif       НомерФормы =  1                       then  Result = "Авторы:";
      end;
    else
      if          НомерФормы =  0                       then  Result = "";
      elsif       НомерФормы =  1                       then  Result = "";
      end;
    end;
    end;


