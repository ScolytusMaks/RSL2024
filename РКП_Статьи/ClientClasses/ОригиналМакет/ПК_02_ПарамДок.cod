class "";
Import РКП_Статьи Classes ОригиналМакет.СтильПК;

inclass

--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
  proc Создание(ПК                      : TextFile);
    ПК.WriteLn("{\rtf1\ansi\deff0");                                    --инициализация формата
    ПК.WriteLn("{\fonttbl");                                            --начало таблицы шрифтов
    ПК.WriteLn("{\f0\froman\fprq\fcharset204 Times New Roman;}");       --гарнитура шрифта выпуска ПК
    ПК.WriteLn("}");                                                    --конец таблицы шрифтов
    ПК.Write  ("{\colortbl;");                                          --начало палитры
    ПК.Write  ("\red0\green0\blue0;");                                  --
    ПК.Write  ("\red128\green128\blue128;");                            --
    ПК.WriteLn("}");                                                    --конец палитры
    ПК.WriteLn("{\stylesheet");                                         --начало листа стилей
    ПК.WriteLn("{"+Стиль_Заголовок1    +"Заголовок статьи 1;}");        --Заголовок статьи
    ПК.WriteLn("{"+Стиль_Заголовок2    +"Заголовок статьи 2;}");        --Заголовок статьи
    ПК.WriteLn("{"+Стиль_Фон           +"Фон;}");                       --Базовый стиль
    ПК.WriteLn("{"+Стиль_Фон2          +"Фон2;}");                      --Базовый стиль
    ПК.WriteLn("{"+Стиль_КлассификаторЛ+"Классификатор 1;}");           --Классификатор
    ПК.WriteLn("{"+Стиль_КлассификаторП+"Классификатор 2;}");           --Классификатор
    ПК.WriteLn("{"+Стиль_НомерСтраницы +"Номер страницы;}");            --Номер страницы
    ПК.WriteLn("{"+Стиль_Сепаратор1    +"Сепаратор 1;}");               --Сепаратор
    ПК.WriteLn("{"+Стиль_Сепаратор2    +"Сепаратор 2;}");               --Сепаратор
    ПК.WriteLn("}");                                                    --конец листа стилей
    ПК.WriteLn("\paperw16840\paperh23814");                             --A3
    ПК.WriteLn("\pgdsc0\pgdscuse195");                                  --что-то о страницах
    ПК.Write  ("\margl964\margr964");                                   --величина левого и правого полей
    ПК.WriteLn("\margt567\margb567") ;                                  --величина верхнего и нижнего полей

    --нумератор страниц
    ПК.WriteLn("{\footer\pvpara\posxc");
    ПК.WriteLn("\fs40\lang1049");                                       --здесь можно изменить начертание номеров страниц
    ПК.WriteLn("{\field{\fldinst{PAGE}}}{\par}}");

    ПК.WriteLn("");

  end;
--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

end