class  'Параметры документа rtf';

inclass public

  proc Создание (ЛГС :TextFile; ЗаписьЛГС :ВыпускЛГС);
    if not ЗаписьЛГС.ПечатьКодаББК then
      ЛГС.WriteLn("{\rtf1\ansi\deff0");                               -- инициализация формата
      ЛГС.WriteLn("{\fonttbl");                                       -- начало таблицы шрифтов
      ЛГС.WriteLn("{\f0\froman\fprq\fcharset204 Times New Roman;}");  -- гарнитура шрифта выпуска ЛГС
      ЛГС.WriteLn("{\f9\froman\fprq\fcharset204 FuturaLight;}");      -- гарнитура шрифта части титульного листа
      ЛГС.WriteLn("}");                                               -- конец таблицы шрифтов
      ЛГС.Write  ("{\colortbl;");                                     -- начало палитры
      ЛГС.Write  ("\red0\green0\blue0;");                             --
      ЛГС.Write  ("\red128\green128\blue128;");                       --
      ЛГС.WriteLn("}");                                               -- конец палитры
      ЛГС.WriteLn("{\stylesheet");                                    -- начало листа стилей
      ЛГС.WriteLn("{"+ОригиналМакет.Стиль.Стиль_Фон                   + "Фон;}"); -- Базовый стиль
      ЛГС.WriteLn("{"+ОригиналМакет.Стиль.Стиль_БибЗапись             + "Биб.запись;}");
      ЛГС.WriteLn("{"+ОригиналМакет.Стиль.Стиль_ЗаголовокРаздела      + "Заголовок раздела;}");
      ЛГС.WriteLn("{"+ОригиналМакет.Стиль.Стиль_Содержание            + " Содержание;}");
      ЛГС.WriteLn("{"+ОригиналМакет.Стиль.Стиль_Указатель             + " Указатель;}");
      ЛГС.WriteLn("{"+ОригиналМакет.Стиль.Стиль_Литера                + " Литера;}");
      ЛГС.WriteLn("{"+ОригиналМакет.Стиль.Стиль_Пояснение             + " Пояснение;}");
      ЛГС.WriteLn("{"+ОригиналМакет.Стиль.Стиль_ТитЛист               + " Титульный лист2;}");
      ЛГС.WriteLn("{"+ОригиналМакет.Стиль.Стиль_Предисловие           + " Предисловие;}");
      ЛГС.WriteLn("}");                                               -- конец листа стилей
      ЛГС.WriteLn("\paperh11510\paperw7940");                         -- размер бумаги
      ЛГС.WriteLn("\pgdsc0\pgdscuse195");                             -- что-то о страницах
      ЛГС.Write  ("\marglsxn845\margrsxn858");                        -- величина левого и правого полей
      ЛГС.WriteLn("\margtsxn884\margbsxn1140");                       -- величина верхнего и нижнего полей
      ЛГС.WriteLn("");
      -- нумератор страниц
      ЛГС.WriteLn("{\footer \pvpara\posxo\posy0");
      --ЛГС.WriteLn("\fs20\lang1049");                                  -- здесь можно изменить начертание номеров страниц
      ЛГС.WriteLn("\fs16\lang1049");                                  -- здесь можно изменить начертание номеров страниц
      ЛГС.WriteLn("{\field{\*\fldinst{PAGE}}}{\par}\fi360\ri360}");
      ЛГС.WriteLn("");
      --ДЛЯ ЧИТКИ-------------------------------------------------------------------
    else
      ЛГС.WriteLn("{\rtf1\ansi\deff0");                               -- инициализация формата
      ЛГС.WriteLn("{\fonttbl");                                       -- начало таблицы шрифтов
      ЛГС.WriteLn("{\f0\froman\fprq\fcharset204 Times New Roman;}");  -- гарнитура шрифта выпуска ЛГС
      ЛГС.WriteLn("{\f9\froman\fprq\fcharset204 FuturaLight;}");      -- гарнитура шрифта части титульного листа
      ЛГС.WriteLn("}");                                               -- конец таблицы шрифтов
      ЛГС.Write  ("{\colortbl;");                                     -- начало палитры
      ЛГС.Write  ("\red0\green0\blue0;");                             --
      ЛГС.Write  ("\red128\green128\blue128;");                       --
      ЛГС.WriteLn("}");                                               -- конец палитры
      ЛГС.WriteLn("{\stylesheet");                                    -- начало листа стилей
      ЛГС.WriteLn("{"+ОригиналМакет.Стиль.Стиль_ФонЧт                 + "Фон;}");--Базовый стиль
      ЛГС.WriteLn("{"+ОригиналМакет.Стиль.Стиль_БибЗаписьЧт           + "Биб.запись;}");
      ЛГС.WriteLn("{"+ОригиналМакет.Стиль.Стиль_ЗаголовокРазделаЧт    + "Заголовок раздела;}");
      ЛГС.WriteLn("{"+ОригиналМакет.Стиль.Стиль_СодержаниеЧт          + " Содержание;}");
      ЛГС.WriteLn("{"+ОригиналМакет.Стиль.Стиль_УказательЧт           + " Указатель;}");
      ЛГС.WriteLn("{"+ОригиналМакет.Стиль.Стиль_ЛитераЧт              + " Литера;}");
      ЛГС.WriteLn("{"+ОригиналМакет.Стиль.Стиль_ПояснениеЧт           + " Пояснение;}");
      ЛГС.WriteLn("{"+ОригиналМакет.Стиль.Стиль_ТитЛистЧт             + " Титульный лист2;}");
      ЛГС.WriteLn("{"+ОригиналМакет.Стиль.Стиль_ПредисловиеЧт         + " Предисловие;}");
      ЛГС.WriteLn("}");                                               -- конец листа стилей
      ЛГС.WriteLn("\paperw11907\paperh16840");                        -- размер бумаги A4
      ЛГС.WriteLn("\pgdsc0\pgdscuse195");                             -- что-то о страницах
      ЛГС.Write  ("\marglsxn845\margrsxn858");                        -- величина левого и правого полей
      ЛГС.WriteLn("\margtsxn884\margbsxn1140");                       -- величина верхнего и нижнего полей
      ЛГС.WriteLn("");
      -- нумератор страниц
      ЛГС.WriteLn("{\footer \pvpara\posxo\posy0");
      --ЛГС.WriteLn("\fs20\lang1049");                                  -- здесь можно изменить начертание номеров страниц
      ЛГС.WriteLn("\fs16\lang1049");                                  -- здесь можно изменить начертание номеров страниц
      ЛГС.WriteLn("{\field{\*\fldinst{PAGE}}}{\par}\fi360\ri360}");
      ЛГС.WriteLn("");
    fi;
  end;

end