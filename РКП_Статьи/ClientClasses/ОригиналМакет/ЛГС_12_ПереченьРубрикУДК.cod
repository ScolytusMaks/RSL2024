class "";

inclass
--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
  proc Создание(ЛГС             : TextFile;
                ЗаписьЛГС       : Record);
    var Q                       : Query;
    var k                       : integer;
    var КодОгл,НаимОгл          : string;
                ЛГС.WriteLn("\par\page\sect\sbknone\cols0");
                ЛГС.WriteLn("\par\pard"+ОригиналМакет.Стиль.styl2+"\qc ");
                ЛГС.WriteLn("{\b ПЕРЕЧЕНЬ РУБРИК, ИСПОЛЬЗУЕМЫХ\b}");
                ЛГС.WriteLn("\line");
                ЛГС.WriteLn("{\b ПРИ ОФОРМЛЕНИИ РАЗДЕЛА \b}");
                ЛГС.WriteLn("\line");
                ЛГС.WriteLn('{\b "СОДЕРЖАНИЕ" ГБУ \b}');
                ЛГС.WriteLn("\line");
                ЛГС.WriteLn("\line");
                ЛГС.WriteLn("\ds2");
    Q                   = Query.Create([РКП_Справочники.СпрТематикаСтатьи]);
    Q.Filter            = "ВклОгл=true";
    Q.Order             = "КодУДК";
    Q.Select;
    for k = 1..Q.Count                                                  do
      КодОгл            = Q.Current.Код;
      НаимОгл           = Q.Current.Наим;
        if      КодОгл  = "0"   or
                КодОгл  = "1"   or
                КодОгл  = "2"   or
                КодОгл  = "3"   or
                КодОгл  = "4"   or
                КодОгл  = "5"   or
                КодОгл  = "6"   or
                КодОгл  = "7"   or
                КодОгл  = "8"   or
                КодОгл  = "9"   or
                КодОгл  = "7/9" then
                ЛГС.Write  ("\par\pard"+ОригиналМакет.Стиль.styl3+"\ql ");
                ЛГС.Write  ("{"+КодОгл+"\tab ");
                ЛГС.Write  (Up(НаимОгл)+"}");
                ЛГС.WriteLn("\ds3");
        else
                ЛГС.Write  ("\par\pard"+ОригиналМакет.Стиль.styl3+"\ql ");
                ЛГС.Write  ("{"+КодОгл+"\tab ");
                ЛГС.Write  (НаимОгл);
                ЛГС.Write  ("}");
                ЛГС.WriteLn("\ds3");
        end;    --условие на выделение регистром
      Q.Next;
    end;        --цикл по указателю УДК
    Q.Close;
                ЛГС.WriteLn("\par");
  end;
--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~


end