Class inherited СИС2.БазовыйБланк "Отчет";

import РКП_СИС classes StringsFunctions;

--{{ 2_Свойства

inobject public
  var фреймУправление :TemplateFrame;
  var фреймИнформация :TemplateFrame;
  var фреймКнопки2    :TemplateFrame;
  var фреймЗащита     :TemplateFrame;

inobject private

  var фреймНадпись         :TemplateFrame;
  var секцИзмененныеЗаписи :TemplateSection;
  var секцПозиции          :TemplateSection;
  var секцСПО              :TemplateSection;
  var секцВарианты         :TemplateSection;
  var ЗаДату1 :Logical;
  var ЗаДату2 :Logical;
  var ЗаДату3 :Logical;
  var ЗаДату4 :Logical;
  var ЗаДату5 :Logical;
  var ЗаДату6 :Logical;
  var ЗаДату :Integer;
  var ДатаН :Date;
  var ДатаК :Date;
  var Библиограф :String;
