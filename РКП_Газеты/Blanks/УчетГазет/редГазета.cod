    Index = Cell.Frame;
    if (Cell.Contents = 'МестоИздания.Наим') then
      aParam[1] = ['ТипФрагмента', 0];
      aParam[2] = ['Фрагмент', Value];
      if (МестаИздания[index].МестоИздания = nil) then
