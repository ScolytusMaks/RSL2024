Class "Константы, используемые проектом";

inclass public

--== И Н Ф О Р М А Ц И Я   О   П Р О Е К Т Е ==--

  ИмяВерсииПроекта: String = Self.ClassProject + '.ВерсияПроекта';

  func ПолучитьВерсиюПроекта: Numeric;
    var MI: MethodInfo;
    MI = СИС2.Функции.ClassInfo.MemberByName('СформироватьВерсиюПроекта') as MethodInfo;
    Return MI.CallFunc(MI, Self.ClassProject); -- обход ограничения компиляции для клиентских классов
  end;

  -- Типизированные константы, используемы для расширенных обработчиков событий.

  -- Для события ПриНаборе в клетке шаблона:
  type типДиалогЕслиНетЗначения synonym tDialogIfNoValue = (тдИскатьПовторить = 2, тдДобавитьИскатьПовторить = 3);
  type типАлгоритмЕслиНетЗначения synonym tAlgIfNoValue = (алгОтмена = 0, алгДобавить = 1, алгИскать = 2);


end